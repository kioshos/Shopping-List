@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Manage users";
}

<div class="container mt-5">
    <h3 class="mb-3">Existing Users:</h3>
    <ul class="list-group">
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a class="text-decoration-none" asp-controller="Admin" asp-action="Index" asp-route-id="@user.Id">
                        @user.UserName
                    </a>
                    
                    <form asp-action="PromoteToAdmin" method="post" class="ml-2">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-success btn-sm">
                            Promote
                        </button>
                    </form>
                    
                    <form asp-action="DeleteUser" method="post" class="ml-2">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                    
                    
                </li>
                
            }
        }
        else
        {
            <li class="list-group-item">No users yet.</li>
        }
    </ul>
</div>
