@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@inject IViewLocalizer Localizer
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = @Localizer["Manage Users"];
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-5">
            <h1 class="display-5 text-center mb-4 text-primary fw-bold">
                @Localizer["Manage Users"]
            </h1>

            <h3 class="mb-3 text-secondary">@Localizer["Existing Users"]:</h3>
            <ul class="list-group list-group-flush">
                @if (Model != null && Model.Any())
                {
                    foreach (var user in Model)
                    {
                        var isAdmin = await UserManager.IsInRoleAsync(user, "Admin");

                        <li class="list-group-item d-flex justify-content-between align-items-center py-3 px-2 rounded-3 shadow-sm mb-2">
                            <a class="text-decoration-none text-dark fw-semibold" asp-controller="Admin" asp-action="Index" asp-route-id="@user.Id">
                                @user.UserName
                            </a>

                            <div class="d-flex">
                                @if (!isAdmin)
                                {
                                    <form asp-action="PromoteToAdmin" method="post" class="me-2">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-success rounded-pill px-3">
                                            <i class="bi bi-person-up me-1"></i> @Localizer["Promote"]
                                        </button>
                                    </form>
                                }

                                <form asp-action="DeleteUser" method="post">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                        <i class="bi bi-trash"></i> @Localizer["Delete"]
                                    </button>
                                </form>
                            </div>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-muted">@Localizer["No users yet"].</li>
                }
            </ul>
        </div>
    </div>
</div>
