@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Shopping List Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    <h1 class="display-5 text-center mb-3 text-primary fw-bold">@ViewBag.ShoppingList.Name</h1>
                    <p class="text-center text-muted">@Localizer["Created on"]: @ViewBag.ShoppingList.Created.ToString("dd/MM/yyyy HH:mm")</p>

                    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
                        <h4 class="mb-0 text-secondary">@Localizer["Items"]</h4>
                    </div>

                    @if (ViewBag.Items != null && ViewBag.Items.Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in ViewBag.Items)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong class="text-dark">@item.Name</strong>
                                        <span class="text-muted">(@item.Quantity)</span>
                                        @if (item.IsPurchased)
                                        {
                                            <span class="badge bg-success ms-2">@Localizer["Purchased"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark ms-2">@Localizer["Not Purchased"]</span>
                                        }
                                    </div>

                                    <form asp-action="TogglePurchaseStatus" asp-controller="ShoppingList" method="post" class="d-inline">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <input type="hidden" name="shoppingListId" value="@ViewBag.ShoppingList.Id" />
                                        <input type="hidden" name="isPurchased" value="@(!item.IsPurchased)" />
                                        <button type="submit" class="btn btn-sm rounded-pill @(item.IsPurchased ? "btn-outline-warning" : "btn-outline-success") px-3">
                                            @(item.IsPurchased ?  @Localizer["Mark as Not Purchased"] : @Localizer["Mark as Purchased"])
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info text-center mt-4 rounded-pill">
                           @Localizer["No items in this list yet"]
                        </div>
                    }

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary rounded-pill px-4">
                            <i class="bi bi-arrow-left me-1"></i> @Localizer["Back to Lists"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
