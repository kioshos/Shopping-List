@using System.Reflection.Emit
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model Shopping.WebUI.Models.AddItemModel

@{
    ViewData["Title"] = "Item Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">@Localizer["Add item"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="AddItem" method="post" asp-controller="Item">
                        <div class="mb-3">
                            <label class="form-label">@Localizer["Name"]</label>
                            <input asp-for="Name" class="form-control" placeholder="@Localizer["Enter name"]" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer["Price"]</label>
                            <input asp-for="Price" class="form-control" placeholder="@Localizer["Enter price"]" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer["Quantity"]</label>
                            <input asp-for="Quantity" class="form-control" placeholder="@Localizer["Enter quantity"]" />
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer["CategoryId"]</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@(ViewBag.Categories as List<SelectListItem>)">
                                <option value="">@Localizer["Select Category"]</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer["ShoppingListId"]</label>
                            <select asp-for="ShoppingListId" class="form-select" asp-items="@(ViewBag.ShoppingLists as List<SelectListItem>)">
                                <option value="">@Localizer["Select Shopping List"]</option>
                            </select>
                            <span asp-validation-for="ShoppingListId" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success">@Localizer["Add item"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
